<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shadowing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher_mainlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mainlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shadowing">
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".MessageActivity" />
        <activity android:name=".NewActivity" />
        <activity android:name=".AuthActivity" />
        <activity android:name=".navigation.CommentActivity" />
        <activity android:name=".navigation.AddPhotoActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/push_icon" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
    </application>

</manifest>